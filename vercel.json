{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js", 
      "use": "@vercel/static-build", 
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/server.js"
    }
  ]
}
